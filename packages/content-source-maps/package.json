{
  "name": "@contentful/content-source-maps",
  "author": "Contentful GmbH",
  "version": "0.8.0",
  "description": "Base SDK for building Content Source Maps with Contentful",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contentful/live-preview.git"
  },
  "bugs": {
    "url": "https://github.com/contentful/live-preview/issues"
  },
  "homepage": "https://github.com/contentful/live-preview#readme",
  "scripts": {
    "start": "yarn concurrently \"yarn:watch:*\"",
    "watch:cjs": "yarn build:cjs -w",
    "watch:esm": "yarn build:esm -w",
    "watch:types": "yarn build:types --watch",
    "prebuild": "rm -rf dist",
    "build": "yarn build:types && yarn build:cjs && yarn build:esm",
    "build:types": "tsc --outDir dist/types --emitDeclarationOnly",
    "build:cjs": "swc src --config-file ../../.swcrc -d dist/cjs -C module.type=commonjs --strip-leading-paths --out-file-extension cjs",
    "build:esm": "swc src --config-file ../../.swcrc -d dist/esm --strip-leading-paths",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "tsc": "tsc --noEmit",
    "test": "vitest --watch",
    "test:ci": "vitest run",
    "coverage": "vitest --coverage",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@vercel/stega": "^0.1.2",
    "json-pointer": "^0.6.2"
  },
  "devDependencies": {
    "chokidar": "3.6.0",
    "contentful": "^10.8.8"
  }
}
